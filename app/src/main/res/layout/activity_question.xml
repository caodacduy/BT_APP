<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="20dp">

    <!-- Thanh trên cùng: Tiêu đề và Thời gian -->
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <!-- Tiêu đề Quiz -->
        <TextView
            android:id="@+id/tvQuizTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:text="Đề thi: Lịch sử Việt Nam"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Thời gian đếm ngược -->
        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/edittext_bg"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="10s"
            android:textColor="@color/accentColor"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <!-- Nội dung câu hỏi -->
    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerLayout"
        android:layout_marginTop="24dp"
        android:background="@drawable/edittext_bg"
        android:gravity="center"
        android:minHeight="150dp"
        android:padding="24dp"
        android:text="Ai là người đã đọc bản Tuyên ngôn Độc lập khai sinh ra nước Việt Nam Dân chủ Cộng hòa?"
        android:textColor="@color/primaryDarkColor"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Container chứa 4 đáp án (Đã sửa lại để cân đối) -->
    <GridLayout
        android:id="@+id/rgOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvQuestion"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:rowCount="2">

        <!-- Đáp án A -->
        <TextView
            android:id="@+id/rbOptionA"
            style="@style/AnswerOptionStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp" />

        <!-- Đáp án B -->
        <TextView
            android:id="@+id/rbOptionB"
            style="@style/AnswerOptionStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp" />

        <!-- Đáp án C -->
        <TextView
            android:id="@+id/rbOptionC"
            style="@style/AnswerOptionStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp" />

        <!-- Đáp án D -->
        <TextView
            android:id="@+id/rbOptionD"
            style="@style/AnswerOptionStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp" />
    </GridLayout>

    <!-- Nút điều hướng -->
    <LinearLayout
        android:id="@+id/navigationButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnFinish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/correctColor"
            android:paddingVertical="14dp"
            android:text="Nộp bài"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/accentColor"
            android:paddingVertical="14dp"
            android:text="Câu tiếp theo"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>

</RelativeLayout>
