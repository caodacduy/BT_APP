<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:background="#F8F9FC"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvQuizTitle"
        android:text="Các đề trắc nghiệm"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#1A237E"
        android:gravity="center"
        android:background="#E8EAF6"
        android:padding="12dp"
        android:elevation="3dp"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Danh sách quiz -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewQuizzes"
        android:layout_below="@id/tvQuizTitle"
        android:layout_above="@id/btnBackHome"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Nút quay lại -->
    <Button
        android:id="@+id/btnBackHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#616161"
        android:padding="12dp"
        android:text="Quay lại trang chủ"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp" />




</RelativeLayout>
