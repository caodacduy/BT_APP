<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:fillViewport="true"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- 1. Thanh tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Thông tin cá nhân"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- 2. Ảnh đại diện -->
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/outline_account_circle_24"
            android:background="@drawable/logo_circle_bg"
            android:backgroundTint="#40FFFFFF"
            android:padding="20dp"
            android:layout_marginBottom="32dp"/>

        <!-- Tên người dùng -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên người dùng"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/edtUsername"
            android:hint="Nhập tên người dùng của bạn"
            android:inputType="textPersonName"
            android:background="@drawable/edittext_bg"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />

        <!-- Email (chỉ xem) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"/>

        <!-- THAY ĐỔI 1: Đổi TextView thành EditText và vô hiệu hóa nó -->
        <EditText
            android:id="@+id/edtEmail"
            android:hint="email@example.com"
            android:background="@drawable/edittext_bg"
            android:backgroundTint="#E0E0E0"
            android:textColor="@color/primaryDarkColor"
            android:padding="14dp"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:enabled="false"
            android:focusable="false" />

        <!-- Mật khẩu mới -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đổi mật khẩu"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/edtPassword"
            android:hint="Để trống nếu không muốn đổi"
            android:inputType="textPassword"
            android:background="@drawable/edittext_bg"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp" />

        <!-- Nút Lưu -->
        <Button
            android:layout_marginTop="32dp"
            android:id="@+id/btnSave"
            android:text="Lưu thay đổi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/accentColor"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:padding="14dp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- THAY ĐỔI 2: Thêm lại nút Back kiểu Button -->
        <Button
            android:id="@+id/btnBack"
            android:text="Quay lại"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#616161"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="12dp"/>

    </LinearLayout>
</ScrollView>
