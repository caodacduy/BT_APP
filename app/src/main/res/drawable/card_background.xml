<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền trắng nhẹ -->
    <solid android:color="#FFFFFFFF" />

    <!-- Bo góc mềm mại -->
    <corners android:radius="12dp" />

    <!-- Viền mảnh xung quanh -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Bóng đổ nhẹ (Android 9 trở lên hỗ trợ elevation, nên dùng kết hợp trong item) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
